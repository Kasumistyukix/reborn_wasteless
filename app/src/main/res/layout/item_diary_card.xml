<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_diary_card"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <!-- Food Image -->
        <ImageView
            android:id="@+id/imgFood"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/img_food_waste"
            android:src="@drawable/icon_sample_photo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Food Name -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvFoodName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_diary_title_1"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/imgFood"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="6dp" />

        <!-- Date -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_diary_date_1"
            android:textSize="11sp"
            app:layout_constraintTop_toBottomOf="@id/tvFoodName"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="2dp" />

        <!-- Weight -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_diary_weight_1"
            app:drawableStartCompat="@drawable/ic_weight_24px"
            app:drawableTint="?attr/colorOnSecondary"
            app:layout_constraintTop_toBottomOf="@id/tvDate"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp" />

        <!-- Avoidability -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvWasteType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_diary_waste_type_1"
            android:layout_marginStart="4dp"
            app:drawableStartCompat="@drawable/ic_unavoidable_24px"
            app:drawableTint="?attr/colorOnSecondary"
            app:layout_constraintTop_toBottomOf="@id/tvDate"
            app:layout_constraintStart_toEndOf="@id/tvWeight"
            android:layout_marginTop="4dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>